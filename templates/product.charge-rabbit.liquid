<form action="{{ product.metafields.charge_rabbit.subscribe_path }}" method="get" class="charge-rabbit-product">
  <div class="grid">
    <div class="grid__item large--seven-twelfths medium--seven-twelfths text-center charge-rabbit-image-wrapper">
      {% if product.featured_image %}
        <img src="{{ product.featured_image.src | product_img_url: 'grande' }}" alt="{{ product.featured_image.alt | escape }}" />
      {% endif %} 
    </div>
    <div class="grid__item product-single__meta--wrapper medium--five-twelfths large--five-twelfths product-single__meta">
      <h1 class="charge-rabbit-title product-single__title">{{ product.title }}</h1>
      <input type="hidden" name="customer_id" value="{{customer.id}}"/>
      <select name="id" class="classic">
        {% for variant in product.variants %}
          <option value="{{ variant.id }}">{% unless variant.title == 'Default Title' %}{{ variant.title }} - {% endunless %}{{ variant.metafields.charge_rabbit.amount | money }}/{{ variant.metafields.charge_rabbit.interval }}</option>
        {% endfor %}
      </select>
      <input class="btn" type="submit" value="Join Now"/>
      <div class="product-single__description rte">
        <p>{{ product.description }}</p>
      </div>
      <hr class="hr">
    </div>
  </div>
</form>
