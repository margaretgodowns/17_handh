<div class="header-image-background" style="background-image: url({{ section.settings.collection-header-image-amazon | img_url: '2000', crop: 'top' }})">
  <div class="wrapper">
    <h1>{{ section.settings.collection-header-title-amazon }}</h1>
  </div>
</div>  

  {% schema %}
  {
    "name": "Collection Header Amazon",
    "settings": [
      {
      	"type": "image_picker",
        "id": "collection-header-image-amazon",
        "label": "Collection Header Image"
      },
      {
        "type": "text",
        "id": "collection-header-title-amazon",
        "label": "Collection Header Title"
      }
    ]
  }
{% endschema %}

